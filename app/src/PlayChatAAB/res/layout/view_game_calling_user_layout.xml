<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>
        <import type="com.dl.playfun.R" />
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.dl.playfun.ui.coinpusher.CoinPusherGameViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:id="@+id/fl_avatar"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            binding:drawable_cornersRadius="@{50}"
            binding:drawable_color="@{@color/yellow_e4a}"
            binding:onClickCommand="@{viewModel.triangleClick}"
            >
            <com.dl.playfun.widget.image.CircleImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                binding:imagePath="@{viewModel.otherCallInfoEntity.avatar}"
                binding:imageErrorPlaceholderRes="@{R.drawable.default_avatar}"
                binding:imagePlaceholderRes="@{R.drawable.default_avatar}"
                binding:resizeW="@{40}"
                binding:resizeH="@{40}"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_triangle_on"
            android:visibility="visible"
            android:layout_marginTop="23dp"
            android:layout_width="46dp"
            android:layout_height="46dp"
            binding:drawable_alpha="@{70}"
            binding:drawable_color="@{@color/black}"
            binding:drawable_radius_leftBottom="@{22}"
            binding:drawable_radius_rightBottom="@{22}"
            >
            <LinearLayout
                android:id="@+id/fl_triangle_off"
                android:visibility="gone"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="23dp"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                binding:drawable_alpha="@{70}"
                binding:drawable_color="@{@color/black}"
                binding:drawable_radius_leftBottom="@{22}"
                binding:drawable_radius_rightBottom="@{22}"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="27dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/img_hangup_red_2"
                    binding:onClickCommand="@{viewModel.callRejectClick}"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/call_audiocall_backdrop"
                    binding:stateActivated="@{viewModel.micMuteField}"
                    binding:onClickCommand="@{viewModel.micMuteOnClickCommand}"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/call_audio_speaker_backdrop"
                    binding:onClickCommand="@{viewModel.handsFreeOnClickCommand}"
                    binding:stateActivated="@{viewModel.handsFreeField}"
                    />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_angle"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:layout_width="13dp"
                android:layout_height="8dp"
                android:src="@drawable/img_coinpusher_triangle"
                android:rotationX="0"
                />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_call_audio_or_video"
            android:layout_below="@+id/fl_avatar"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:src="@drawable/selector_call_audio_or_video"
            binding:onClickCommand="@{viewModel.makeCallUserClick}"
            binding:stateActivated="@{viewModel.makeCallTypeField}"
            />
    </RelativeLayout>
</layout>