<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">

    <data>

        <import type="com.dl.playfun.R" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dl.playfun.ui.task.record.list.ExchangeRecordItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/radius_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:button="@null"
                android:checked="@={viewModel.agree}"
                android:drawableStart="@drawable/checkbox_list_record"
                android:padding="10dp"
                android:visibility="@{viewModel.gold.intValue()==0?View.VISIBLE:View.GONE}"
                binding:isThrottleFirst="true"
                binding:onClickCommand="@{viewModel.isSelectedAll}" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/checkbox">
                <androidx.cardview.widget.CardView
                    android:id="@+id/good_img_layout"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:background="#F0F0F0"
                    android:layout_width="67dp"
                    android:layout_height="67dp">
                    <ImageView
                        android:id="@+id/good_img"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:scaleType="centerCrop"
                        binding:imageErrorPlaceholderRes="@{R.drawable.default_avatar}"
                        binding:imagePlaceholderRes="@{R.drawable.default_avatar}"
                        binding:imageThumbPath="@{viewModel.itemEntity.img}"
                        binding:resizeH="@{67}"
                        binding:resizeW="@{67}"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="19dp"
                    android:layout_toEndOf="@+id/good_img_layout"
                    android:text="@{viewModel.itemEntity.title}"
                    android:textColor="#ff43435e"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="19dp"
                    android:layout_toEndOf="@+id/good_img_layout"
                    android:text="@{viewModel.getDateTime()}"
                    android:textColor="#ffbfbfbf"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="77dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="13dp"
                android:background="@mipmap/task_sign_in_sub"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:text="@string/playfun_receive"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{viewModel.SubVipShow()}"
                binding:onClickCommand="@{viewModel.ToSubVip}" />

            <TextView
                android:layout_width="77dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/task_sign_in_ed"
                android:gravity="center"
                android:text="@string/playfun_receive"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="@{viewModel.SubYVipShow()}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="14dp"
                android:layout_toStartOf="@+id/pack_up"
                android:text="@{viewModel.getExchangeText()}"
                android:textColor="#ff9494a5"
                android:textSize="13sp"
                android:visibility="@{viewModel.ExchangeTypeShow()}"
                binding:onClickCommand="@{viewModel.clickDetail}" />

            <ImageView
                android:id="@+id/pack_up"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="13dp"
                android:background="@{viewModel.itemDrawable}"
                android:visibility="@{viewModel.ExchangeTypeShow()}"
                binding:onClickCommand="@{viewModel.clickDetail}" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/x_line"
            android:visibility="@{viewModel.isDetailHidden?View.GONE:View.VISIBLE}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:visibility="@{viewModel.isDetailHidden?View.GONE:View.VISIBLE}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:gravity="left"
                android:text="@{viewModel.isDetailText}" />
        </LinearLayout>
    </LinearLayout>
</layout>