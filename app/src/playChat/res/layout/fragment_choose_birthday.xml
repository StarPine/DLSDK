<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dl.play.chat.ui.login.profile.ProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_btn_background"
        android:fadingEdge="vertical"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context=".ui.login.register.RegisterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.mine.choosesex.ChooseSexFragment">

            <View
                android:id="@+id/status_bar_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/status_bar_color" />

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">

                <com.dl.play.chat.widget.BasicToolbar
                    android:id="@+id/basic_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_height" />

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="42dp"
                    android:background="@drawable/reg_user_process3"
                    android:maxWidth="330dp" />

                <TextView
                    android:id="@+id/birthday_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="81dp"
                    android:text="@string/choose_birthday_name"
                    android:textColor="@color/gray_dark"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/birthday_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/choose_birthday_title1"
                    android:textColor="@color/gray_dark"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/choose_birthday_title"
                    android:textColor="#7C8698"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="53dp"
                    android:layout_marginRight="42dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/click_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#F4F4F4"
                        android:gravity="center"
                        android:hint="@string/please_choose"
                        android:text='@{viewModel.UserBirthdays==null?"":viewModel.UserBirthdays}'
                        android:textSize="20dp"
                        app:onClickCommand="@{viewModel.clickBirthdaySel}" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_below="@+id/iv_top_view"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="59dp"
                    android:layout_marginRight="42dp"
                    android:text="@string/dialog_set_withdraw_account_confirm"
                    app:onClickCommand="@{viewModel.ConfirmBirthday}" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>