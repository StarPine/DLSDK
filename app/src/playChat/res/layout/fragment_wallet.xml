<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dl.play.chat.ui.mine.wallet.WalletViewModel" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.mine.wallet.WalletFragment">

        <View
            android:id="@+id/status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/status_bar_color" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <com.dl.play.chat.widget.BasicToolbar
                android:id="@+id/basic_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                app:toolbar_title="@string/wallet_title" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:layout_marginTop="7dp"
                binding:onClickCommand="@{viewModel.clickCoinMoneyView}">

                <TextView
                    android:id="@+id/diamond_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="18dp"
                    android:elevation="11dp"
                    android:text="@{viewModel.totalCoin}"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diamond_num"
                    android:layout_alignStart="@+id/diamond_num"
                    android:elevation="11dp"
                    android:text="@string/tab_wallet_2"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/wallet_top_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="@{viewModel.getTipMoneyShowFlag?View.VISIBLE:View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                binding:onClickCommand="@{viewModel.clickGirlMoneyView}">

                <TextView
                    android:id="@+id/tw_diamond_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="18dp"
                    android:elevation="11dp"
                    android:text="@{viewModel.totalProfit}"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tw_diamond_num"
                    android:layout_alignStart="@+id/tw_diamond_num"
                    android:elevation="11dp"
                    android:text="@string/tw_money_text"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/taiwan_dollar_backdrop_img" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>