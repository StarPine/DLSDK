<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sel_vip_item"
        android:layout_width="72dp"
        android:layout_height="107dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="20px"
        android:background="@drawable/vip_alert_none"
        tools:background="@drawable/vip_alert_none">

        <TextView
            android:id="@+id/goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="111"
            android:textColor="#66656b"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/title2"
            android:layout_below="@+id/goodsName"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/payPrice_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/payPrice"
                android:layout_marginBottom="9px"
                    android:text="$"
                    android:textAlignment="center"
                android:textColor="#dbb580"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/payPrice_left"
                android:text="1099"
                android:textColor="#dbb580"
                android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:layout_below="@+id/title2"
                android:id="@+id/gold_tag_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="111"
                android:textColor="#9e9ea0"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/gold_tag_price"
                android:id="@+id/dayPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="111"
                android:textColor="#dbb580"
                android:textSize="10sp"
                android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/gold_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/sel_vip_item"
        android:layout_alignParentTop="true"
        android:background="@drawable/img_vip_sub_item_rcmd"
        android:text="立省49元"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="8sp" />
</RelativeLayout>