<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dl.play.chat.ui.login.profile.ProfileViewModel" />

        <import type="com.dl.play.chat.R" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_btn_background"
        android:fadingEdge="vertical"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context=".ui.login.register.RegisterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.mine.choosesex.ChooseSexFragment">

            <View
                android:id="@+id/status_bar_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/status_bar_color" />

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">

                <com.dl.play.chat.widget.BasicToolbar
                    android:id="@+id/basic_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_height" />

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="42dp"
                    android:background="@drawable/reg_user_process4"
                    android:maxWidth="330dp" />

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="81dp"
                    android:layout_marginRight="42dp"
                    android:text="@{viewModel.UserSex==0?@string/choose_portrait_title:@string/choose_portrait_titles}"
                    android:textColor="@color/gray_dark"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    tools:text="@string/choose_portrait_titles" />

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="42dp"
                    android:text="@string/choose_portrait_title1"
                    android:textColor="@color/gray_dark"
                    android:textSize="30dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <com.dl.play.chat.widget.roundedimageview.RoundedImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/portrait_add"
                        app:onClickCommand="@{viewModel.clickPortait}"
                        app:riv_corner_radius="8dp"
                        binding:imageErrorPlaceholderRes="@{R.drawable.portrait_add}"
                        binding:imagePlaceholderRes="@{R.drawable.portrait_add}"
                        binding:imageThumbPath="@{viewModel.UserPortrait}" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="42dp"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:src="@{viewModel.UserSex==0?@drawable/portrait_default:@drawable/portrait_default_man}" />

                        <ImageView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_marginTop="10dp"
                            android:src="@{viewModel.UserSex==0?@drawable/portrait_default1:@drawable/portrait_default_man1}" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    style="@style/ButtonPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_below="@+id/iv_top_view"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="59dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/reg_user_phone_ok"
                    app:onClickCommand="@{viewModel.ConfirmPortait}" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>