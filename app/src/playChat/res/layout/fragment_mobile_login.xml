<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.dl.playfun.ui.login.viewmodel.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        android:orientation="vertical"
        tools:context=".ui.login.mobilelogin.MobileLoginFragment">


        <LinearLayout
            android:id="@+id/iv_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/login_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_text_2s" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_toolbar_back"
                    binding:onClickCommand="@{viewModel.mobileLoginBackOnClickCommand}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login_title"
                    android:textColor="@color/toolbar_title_color"
                    android:textSize="@dimen/text_size_toolbar_title"
                    android:textStyle="bold" />
            </RelativeLayout>

            <EditText
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_grey_background"
                android:hint="@string/mobile_hint"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="16dp"
                android:text="@={viewModel.mobile}"
                android:textColorHint="#9394A0"
                android:textSize="@dimen/text_size_middle2" />

            <EditText
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_grey_background"
                android:hint="@string/input_pwd_hint"
                android:inputType="textPassword"
                android:maxLength="32"
                android:paddingLeft="16dp"
                android:text="@={viewModel.password}"
                android:textColorHint="#9394A0"
                android:textSize="@dimen/text_size_middle2" />

            <Button
                android:id="@+id/btn_login"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:text="@string/login"
                android:textSize="@dimen/text_size_middle2"
                binding:onClickCommand="@{viewModel.mobileLoginOnClickCommand}" />

            <Button
                style="@style/ButtonSecondary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="30dp"
                android:background="#00000000"
                android:text="@string/login_forgot_password"
                android:textColor="@color/text_7639FF"
                android:textSize="@dimen/text_size_middle2"
                binding:onClickCommand="@{viewModel.forgotPasswordOnClickCommand}" />
        </LinearLayout>

    </LinearLayout>
</layout>