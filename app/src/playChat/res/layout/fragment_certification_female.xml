                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="@{safeUnbox(viewModel.faceCertification) ? View.GONE:View.VISIBLE}">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/privilege_gray_light_background"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_privilege_male" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:drawableLeft="@drawable/ic_auth_lock"
                                        android:drawablePadding="6dp"
                                        android:gravity="center"
                                        android:paddingLeft="10dp"
                                        android:text="@string/fragment_certification_female_poster"
                                        android:textColor="@color/gray_light"
                                        android:textSize="14dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/privilege_gray_light_background"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_privilege_male" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:drawableLeft="@drawable/ic_auth_lock"
                                        android:drawablePadding="6dp"
                                        android:gravity="center"
                                        android:paddingLeft="10dp"
                                        android:text="@string/fragment_certification_female_comment_man"
                                        android:textColor="@color/gray_light"
                                        android:textSize="14dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:visibility="@{safeUnbox(viewModel.faceCertification) ? View.GONE:View.VISIBLE}">

                                <LinearLayout
