<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.dl.play.chat.ui.certification.certificationfemale.CertificationFemaleViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.certification.certificationfemale.CertificationFemaleFragment">

        <View
            android:id="@+id/status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/status_bar_color" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <com.dl.play.chat.widget.BasicToolbar
                android:id="@+id/basic_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                app:toolbar_title="@string/fragment_certification_female_title" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/container_background"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            binding:onLoadMoreCommand="@{viewModel.onLoadMoreCommand}"
            binding:onRefreshCommand="@{viewModel.onRefreshCommand}">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_auth_face_female" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/green_fillet_background"
                            android:visibility="@{safeUnbox(viewModel.applyGoddessStatus) > -1 ? View.VISIBLE:View.GONE}">

                            <ImageView
                                android:id="@+id/iv_g_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_white_success" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="6dp"
                                android:layout_toRightOf="@+id/iv_g_status"
                                android:text="@{viewModel.applyGoddessStatusStr}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_big" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="16dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_btn_male"
                                    android:visibility="@{safeUnbox(viewModel.faceCertification) ? View.VISIBLE:View.GONE}" />

                                <ImageView
                                    android:id="@+id/iv_h_div"
                                    android:layout_width="2px"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/white"
                                    android:visibility="@{safeUnbox(viewModel.applyGoddessStatus) == 1 ? View.VISIBLE:View.GONE}" />

                                <ImageView
                                    android:id="@+id/iv_goddess_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_btn_female"
                                    android:visibility="@{safeUnbox(viewModel.applyGoddessStatus) == 1 ? View.VISIBLE:View.GONE}" />
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="220dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/button_green_background"
                            binding:onClickCommand="@{viewModel.faceVerifyOnClickCommand}">

                            <Button
                                style="@style/ButtonGreen"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:layout_centerInParent="true"
                                android:clickable="false"
                                android:drawableLeft="@drawable/ic_btn_male"
                                android:drawablePadding="5dp"
                                android:text='@{safeUnbox(viewModel.faceCertification) ? @string/update_face_record:@string/fragment_certification_female_title}'
                                android:textSize="14.67dp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_update"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="14dp"
                            android:text="@string/look_better_tell_me"
                            android:textColor="@color/gray_light"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="@{safeUnbox(viewModel.faceCertification) ? View.VISIBLE:View.GONE}" />

                        <RelativeLayout
                            android:layout_width="220dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/button_pink_background"
                            android:visibility="@{safeUnbox(viewModel.applyGoddessStatus) == 1?View.GONE:View.VISIBLE}"
                            binding:onClickCommand="@{viewModel.goddessVerifyOnClickCommand}">

                            <Button
                                style="@style/ButtonPink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:clickable="false"
                                android:drawableLeft="@drawable/ic_btn_female"
                                android:drawablePadding="5dp"
                                android:text='@{safeUnbox(viewModel.applyGoddessStatus) == -1 ? @string/goddess_certification:safeUnbox(viewModel.applyGoddessStatus) == 0 ? @string/goddess_certification_auditing:@string/goddess_certification}'
                                android:textSize="14.67dp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
