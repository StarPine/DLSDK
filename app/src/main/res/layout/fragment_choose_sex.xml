<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.dl.playfun.ui.mine.profile.choosesex.ChooseSexViewModel" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <View
                android:id="@+id/status_bar_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/status_bar_color" />

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">

                <com.dl.playfun.widget.BasicToolbar
                    android:id="@+id/basic_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/action_bar_height">

                </com.dl.playfun.widget.BasicToolbar>

            </com.google.android.material.appbar.AppBarLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="29dp"
                android:text="@string/playfun_choose_sex_your_are"
                android:textColor="@color/gray_dark"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="18dp"
                android:text="@string/playfun_choose_sex_title"
                android:textColor="#7C8698"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:layout_marginTop="29dp"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="38dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_male"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_gender_male"
                    android:scaleType="fitXY"
                    app:onClickCommand="@{viewModel.chooseMale}" />

                <ImageView
                    android:id="@+id/iv_female"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_gender_female"
                    android:scaleType="fitXY"
                    app:onClickCommand="@{viewModel.chooseFemale}" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="72dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/playfun_choose_sex_title1"
                android:textColor="#7C8698" />

            <Button
                android:id="@+id/btn_confirm"
                style="@style/ButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/iv_top_view"
                android:layout_marginTop="35dp"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:text="@string/playfun_dialog_set_withdraw_account_confirm"
                app:onClickCommand="@{viewModel.confird}" />

        </LinearLayout>
</layout>