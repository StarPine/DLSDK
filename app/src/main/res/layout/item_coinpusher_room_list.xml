<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemEntity"
            type="com.dl.playfun.entity.CoinPusherRoomInfoEntity.DeviceInfo" />
        <import type="com.dl.playfun.R" />
    </data>

    <RelativeLayout
        binding:drawable_color="@{@color/white}"
        binding:drawable_cornersRadius="@{15}"
        android:layout_width="163dp"
        android:layout_height="208dp"
        android:shadowColor="#B9CADE"
        android:shadowDx="0"
        android:shadowDy="4"
        >
        <androidx.appcompat.widget.AppCompatTextView
            binding:drawable_color="@{itemEntity.status == 1 ?@color/red_9 : @color/green_14E29A}"
            binding:drawable_cornersRadius="@{15}"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:text="@string/playfun_coinpusher_text_2"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="158dp"
            binding:imagePath="@{itemEntity.icon}"
            binding:imageErrorPlaceholderRes="@{R.drawable.default_load_img_purl}"
            binding:imagePlaceholderRes="@{R.drawable.default_load_img_purl}"
            />
    </RelativeLayout>
</layout>