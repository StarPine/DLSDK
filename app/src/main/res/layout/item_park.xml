<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

        <import type="com.dl.playfun.R" />

        <import type="com.dl.playfun.utils.SystemDictUtils" />

        <import type="android.view.View" />

        <import type="com.blankj.utilcode.util.StringUtils" />


        <variable
            name="viewModel"
            type="com.dl.playfun.ui.viewmodel.BaseParkItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="13.6dp"
        android:paddingTop="17.46dp"
        android:paddingRight="8dp"
        android:paddingBottom="17.46dp"
        binding:onClickCommand="@{viewModel.itemClick}">
        <RelativeLayout
            android:id="@+id/rl_iv_avatar"
            android:layout_width="76dp"
            android:layout_height="76dp">

            <com.dl.playfun.widget.roundedimageview.RoundedImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                app:riv_corner_radius="8dp"
                binding:imageItemErrorPlaceholderRes="@{R.drawable.default_avatar}"
                binding:imageItemPath="@{viewModel.itemEntity.avatar}"
                binding:imageItemPlaceholderRes="@{R.drawable.default_avatar}"
                binding:resizeH="@{76}"
                binding:resizeW="@{76}" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/item_lottie"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:elevation="11dp"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/accost_animation"
                binding:accountCollect="@{viewModel.accountCollect}"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignBottom="@+id/rl_iv_avatar"
            android:background="@drawable/avatar_corner_mark"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_img_count" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="@{String.valueOf(viewModel.itemEntity.imgNumber)}"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/rl_iv_avatar">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:maxWidth="109dp"
                android:maxLength="12"
                android:singleLine="true"
                android:text="@{viewModel.itemEntity.nickname}"
                android:textColor="@color/toolbar_title_color"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="艾希lovexi666" />

            <ImageView
                android:id="@+id/iv_real_man"
                android:layout_width="31dp"
                android:layout_height="13dp"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/tv_name"
                android:src="@drawable/ic_real_man"
                android:visibility="@{viewModel.isRealManVisible()}" />

            <ImageView
                android:id="@+id/iv_goddess"
                android:layout_width="31dp"
                android:layout_height="13dp"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/iv_real_man"
                android:src="@drawable/ic_goddess"
                android:visibility="@{viewModel.isGoddessVisible()}" />

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="31dp"
                android:layout_height="13dp"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/iv_goddess"
                android:src="@drawable/ic_vip"
                android:visibility="@{viewModel.isVipVisible()}" />

            <ImageView
                android:layout_width="31dp"
                android:layout_height="13dp"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/iv_vip"
                android:scaleType="fitCenter"
                binding:imagePath="@{viewModel.gameUrl()}" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="14dp"
            android:background="@drawable/item_park_radius_back"
            binding:onClickCommand="@{viewModel.accostOnClickCommand}">


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/item_accost_img"
                android:visibility="@{viewModel.itemEntity.isAccost==0?View.VISIBLE:View.GONE}" />


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_message_send"
                android:visibility="@{viewModel.itemEntity.isAccost==1?View.VISIBLE:View.GONE}" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_name"
            android:layout_alignLeft="@+id/rl_name"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@{StringUtils.isEmpty(viewModel.itemEntity.city) ? @string/playfun_unknown_region : viewModel.itemEntity.city}"
                    android:textColor="#FF827692"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="城市" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center_vertical"
                    android:text="|"
                    android:textColor="#CDCED1"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:visibility="@{viewModel.isEmpty(viewModel.ageAndConstellation)? View.GONE :View.VISIBLE}"
                    android:text="@{viewModel.ageAndConstellation}"
                    android:textColor="#FF827692"
                    android:textSize="12sp"
                    tools:text="年龄星座" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@{SystemDictUtils.getOccupationById(safeUnbox(viewModel.itemEntity.occupationId))}"
                android:textColor="#FF827692"
                android:textSize="12sp"
                tools:text="职业" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tag_1"
            android:layout_alignLeft="@+id/rl_name"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:text="@{viewModel.distance}"
                android:textColor="@color/text_9EA1B0"
                android:textSize="@dimen/text_size_small"
                tools:text="未知" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:text="|"
                android:textColor="#CDCED1"
                android:textSize="@dimen/text_size_small"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:text='@{viewModel.onlineStatus}'
                android:textColor="@{viewModel.itemEntity.isOnline == 1 ? @color/green:@color/text_9EA1B0}"
                android:textSize="@dimen/text_size_small"
                app:isBold="@{viewModel.itemEntity.isOnline == 1 ? true:false}"
                tools:text="在线"
                tools:textColor="@color/green"
                tools:textStyle="bold" />

            <!--            android:background="@{viewModel.itemEntity.isOnline == 1 ? @drawable/tag_background_green:@drawable/trans_bg}"-->

            <TextView
                style="@style/TagRed"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="7dp"
                android:drawableStart="@drawable/ic_red_packet"
                android:gravity="center_vertical"
                android:visibility="@{viewModel.isPaidAlbum()}" />

            <TextView
                style="@style/TagBlue"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:drawableLeft="@{viewModel.itemEntity.albumApply == 1 ? @drawable/ic_blue_unlock:@drawable/ic_blue_lock}"
                android:gravity="center_vertical"
                android:visibility="@{viewModel.isAuthAlbum()}"
                tools:text="aaa" />
        </LinearLayout>

    </RelativeLayout>
</layout>