<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.drawable.GradientDrawable" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/img_mediagallery_lock_backdrop"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="19dp"
                android:layout_gravity="center"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/img_mediagallery_lock_like"
                />
            <FrameLayout
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鑽石照片"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/dialog_sign_gold_coins"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_coin"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:textColor="@color/pseekbar_process"
                    android:textSize="23sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="33dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="@string/playfun_pay_to_unlock"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                binding:drawable_orientation="@{GradientDrawable.Orientation.LEFT_RIGHT}"
                binding:drawable_cornersRadius="@{24}"
                binding:drawable_gradient_startColor="@{@color/playfun_shape_radius_start_color}"
                binding:drawable_gradient_endColor="@{@color/playfun_shape_radius_end_color}"
                />
        </LinearLayout>
    </FrameLayout>
</layout>