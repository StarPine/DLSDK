<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="-5dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:text="@string/playfun_radio_fragment_posts"
                android:textColor="@color/purple"
                android:textSize="16sp" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:button="@null"
                android:clickable="false"
                android:drawableRight="@drawable/radio_filter_text_arrow"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:text="@string/playfun_radio_selected_zuiz"
                android:textColor="@drawable/radio_filter_text_color"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_region"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:gravity="end">

            <CheckBox
                android:id="@+id/tv_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:button="@null"
                android:clickable="false"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableRight="@drawable/radio_filter_text_arrow"
                android:drawablePadding="4dp"
                android:text="@string/playfun_text_all"
                android:textColor="@drawable/radio_filter_text_color"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
