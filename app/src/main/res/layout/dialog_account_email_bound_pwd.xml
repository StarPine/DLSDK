<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="27dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="19dp"
                    android:src="@drawable/ic_toolbar_back"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:text="設定密碼"
                    android:textColor="#ff333333"
                    android:textSize="18sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="15dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/radio_publish_close"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_18"
                android:background="@drawable/shape_radius_6"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:src="@mipmap/icon_email_pwd" />

                <com.dl.playfun.widget.custom.PasswordEditText
                    android:id="@+id/edit_email_pwd"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:hint="输入账号"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:text=""
                    app:imgHeight="20dp"
                    app:imgResOffImg="@drawable/password_off_ic"
                    app:imgResOnImg="@drawable/password_on_ic"
                    app:imgWidth="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_18"
                android:background="@drawable/shape_radius_6"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:src="@mipmap/icon_email_pwd2" />

                <com.dl.playfun.widget.custom.PasswordEditText
                    android:id="@+id/edit_email_pwd2"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:hint="输入账号"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:text=""
                    app:imgHeight="20dp"
                    app:imgResOffImg="@drawable/password_off_ic"
                    app:imgResOnImg="@drawable/password_on_ic"
                    app:imgWidth="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:background="@drawable/login_email_btn_sub"
                android:stateListAnimator="@null"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/playfun_confirm"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>