<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tootls="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    tootls:ignore="MissingDefaultResource">

    <RelativeLayout
        android:background="@drawable/attendance_success_back"
        android:layout_width="match_parent"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:layout_height="403dp"
        android:id="@+id/no_vip_unlock"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="5dp"
            android:elevation="11dp"
            android:src="@mipmap/icon_dialog_sign_close"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tip_tv"
            android:layout_marginTop="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="新手任務"
            android:textColor="#ff9897b3"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tip_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip_tv"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:text="首次回復訊息"
            android:textColor="#ff42425e"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/title_img"
            android:layout_below="@+id/tip_tv2"
            android:layout_width="119dp"
            android:layout_height="78dp"
            android:layout_marginTop="8dp"
            android:layout_centerInParent="true"
            android:src="@drawable/dialog_task_currency" />

        <TextView
            android:id="@+id/title_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_img"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            tootls:text="積分 +10"
            android:textColor="#FFFD42D6"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_fen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="@string/playfun_daily_atendance_text"
            android:textColor="#ff9b9ca8"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/content_text"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="29dp"
            android:textSize="14sp"
            android:text="@string/playfun_daily_atendance_accept2" />
    </RelativeLayout>
</RelativeLayout>