<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigation_bar_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/input_title_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="57dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/voice_input_switch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/action_audio_selector" />

        <com.tencent.qcloud.tuikit.tuichat.ui.view.input.TIMMentionEditText
            android:id="@+id/chat_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/msg_editor_border"
            android:maxHeight="120dp"
            android:minHeight="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="14dp"
            android:textCursorDrawable="@drawable/my_cursor"
            android:paddingRight="5dp" />

        <Button
            android:id="@+id/chat_voice_input"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/voice_btn_selector"
            android:text="@string/hold_say"
            android:textColor="@color/text_color_gray"
            android:visibility="gone" />
        <Button
            android:id="@+id/send_btn_display"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:background="@drawable/custom_send_btn_display"
            android:text="@string/send"
            android:textColor="#fff"
            android:textSize="11sp"
            android:visibility="visible" />
        <Button
            android:id="@+id/send_btn"
            android:layout_width="67dp"
            android:layout_height="33dp"
            android:background="@drawable/custom_send_btn"
            android:text="@string/send"
            android:textColor="#fff"
            android:textSize="11sp"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <ImageView
            android:id="@+id/face_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/custom_im_face" />

        <ImageView
            android:id="@+id/phone_video_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_toEndOf="@+id/face_btn"
            android:layout_toRightOf="@+id/face_btn"
            android:scaleType="centerCrop"
            android:src="@drawable/custom_im_phone_video" />

        <ImageView
            android:id="@+id/location_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_toEndOf="@+id/phone_video_btn"
            android:layout_toRightOf="@+id/phone_video_btn"
            android:scaleType="centerCrop"
            android:src="@drawable/custom_im_location"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/gift_btn"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_toEndOf="@+id/phone_video_btn"
            android:layout_toRightOf="@+id/phone_video_btn"
            android:scaleType="centerCrop"
            android:src="@drawable/custom_im_gift" />

        <ImageView
            android:id="@+id/call_phone_video_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_toEndOf="@+id/gift_btn"
            android:layout_toRightOf="@+id/gift_btn"
            android:scaleType="centerCrop"
            android:src="@drawable/custom_call_play" />

        <View
            android:id="@+id/view_red_phone"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="-3dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/call_phone_video_btn"
            android:layout_toRightOf="@+id/call_phone_video_btn"
            android:background="@drawable/custom_circle_red"
            android:elevation="1dp" />

        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_toEndOf="@+id/call_phone_video_btn"
            android:layout_toRightOf="@+id/call_phone_video_btn"
            android:scaleType="centerCrop"
            android:src="@drawable/action_more_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
